@charset "UTF-8";
@font-face{
font-family:dqfont;
src:url('PixelMplus10-Regular.woff')format('woff');
}
@media screen and (min-width: 768px) {
	html{
        width:auto;
        height: 800px;
        font-family:dqfont;

    }



body{
	background-color: black;
	color:white;
}
img{
	width: 1200px;
	height: 700px;


}

.title{
	position: relative;
	text-align: center;
}

.title input {
	position: absolute;
	color:black;
	font-weight: bold;
	font-size: 5vw;
	top: 70%;
	left: 50%;
  	-ms-transform: translate(-50%,-50%);
  	-webkit-transform: translate(-50%,-50%);
  	transform: translate(-50%,-50%);
  	margin:0;
 	padding:0;
 	text-decoration: none;
 	font-family:dqfont;

}
.title input:hover{
  transition : 0.5s;
  color:#ff0000;
  box-shadow:none;
}
}
/* ----------------------------------------------------------------スマホ*/
@media screen and (max-width: 768px) {
html{
    width: auto%;
    height: 100%;
    display: flex;
	flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    font-family:dqfont;
}



body{
	background-color: black;
	color:white;

}

.title {
	text-align: center;
	width: 100%;
	height: 100%;
}

.title img{
	max-width: 100%;
	height: 720px;
}
.title a {
	position: absolute;
	color:#000000;
	font-weight: bold;
	font-size: 10vw;
	top: 70%;
	left: 50%;
  	-ms-transform: translate(-50%,-50%);
  	-webkit-transform: translate(-50%,-50%);
  	transform: translate(-50%,-50%);
  	margin:0;
 	padding:0;
 	text-decoration: none;
}
.title a:hover{
  transition : 0.5s;
  color:#ff0000;
  box-shadow:none;
}
}





