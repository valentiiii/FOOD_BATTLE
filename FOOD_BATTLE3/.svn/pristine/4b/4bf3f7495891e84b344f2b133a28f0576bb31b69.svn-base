@charset "UTF-8";


@media screen and (min-width: 768px) {

	html{
        width:auto;
        height: auto;

    }

body{
	background-color:black;
    color:white;
}

.gameover{
	text-align:center;
	display:block;
	max-width:50%;
	margin:0 auto;
}

a{
	text-align:center;
	display:block;
	max-width:50%;
	margin:0 auto;
	font-size:36px;
	color:white;
	text-decoration:none;
}

img{
	    width:100%;
        height: auto;
}

}

/* -------------------------------------------スマホ */

@media screen and (max-width: 768px) {

	html{
        width:auto;
        height: 100%;

    }

body{
	background-color:black;
    color:white;

}

.gameover{

	display:block;
	max-width:100%;
	margin:50% auto;
	text-decoration:center;
	margin-left: 5%;
}

a{
	text-align:center;
	display:block;
	max-width:100%;
	margin: auto;
	font-size:6vw;
	color:white;
	text-decoration:none;
}

img{
	    width:100%;
        height: 100%;
}


}