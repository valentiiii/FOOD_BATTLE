.tolk{
	text-align:center;
	display:block;
	max-width:50%;
	margin:0 auto;
	 position: relative;
}

.king{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 10%;
    left: 47%;
}

.hero{
	display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 40%;
    left: 47%;

}

.night1{
	display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 15%;
    left: 33.5%;

}

.night2{
	display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 15%;
    left: 60%;

}



